<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27272a"
    tools:context=".AddingPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/addTypeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Type of Animal"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addTypeET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/backgroundone2"

            android:ems="10"
            android:hint="Enter"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/addConditionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Condition of the Animal"

            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addConditionET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/backgroundone2"
            android:ems="10"
            android:hint="Enter"

            android:inputType="textPersonName"
            android:padding="10dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/addPictureTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Add Picture"
            android:textAlignment="center"

            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addPictureET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/backgroundone2"
            android:ems="10"
            android:hint="Enter"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/addSummaryTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Summary of the Animal"
            android:textAlignment="center"

            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addSummaryET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/backgroundone2"
            android:ems="10"
            android:hint="Enter"
            android:inputType="textPersonName"

            android:padding="10dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/addPriceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Price"

            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addPriceET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/backgroundone2"
            android:ems="10"
            android:hint="Enter"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100sp"
            android:textColor="@color/white"
            android:layout_marginTop="30sp"
            android:background="@drawable/backgroundone3"
            android:text="Submit" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100sp"
            android:layout_marginTop="30sp"
            android:textColor="@color/white"
            android:background="@drawable/backgroundone3"
            android:gravity="center"
            android:text="back" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>