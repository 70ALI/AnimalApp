<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ooo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundone2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/AnimalTypeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animal Type : "
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AnimalConditionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Condition :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AnimalSummaryTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary : "
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AnimalPriceTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price : "
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AnimalPictureTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Picture : Think"
                android:textSize="20dp"
                android:textStyle="bold" />

<!--            <Button-->
<!--                android:id="@+id/editBtn"-->
<!--                android:layout_width="130dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@drawable/backgroundone3"-->
<!--                android:elevation="15dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:textColor="@color/white"-->
<!--                android:layout_marginHorizontal="10dp"-->
<!--                android:text="edit" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TypeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ConditionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SummaryTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PriceTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundone3"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="delete"
                app:layout_constraintTop_toBottomOf="@+id/ooo"/>
</androidx.constraintlayout.widget.ConstraintLayout>
